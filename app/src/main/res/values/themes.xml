<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoryVerse" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- styles.xml -->
    <style name="create_your">
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textColor">@color/MainTextColor</item>
    </style>
    <style name="sign_up">
        <item name="backgroundColor">#2D201C</item>

        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- styles.xml -->
    <style name="already_hav">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/MainTextColor</item>
    </style>
</resources>